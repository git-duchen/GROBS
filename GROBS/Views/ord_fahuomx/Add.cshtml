@using GROBS.App_Code
@using GROBS.Models
@model ord_fahuomxViewModel
@{ViewBag.Title = "发货明细添加";}
<script type="text/javascript">
    $(document).ready(function () {
        //提交表单
        $("#save_top,#save_bottom").on("click", function () {
            $("#form").submit();
        });
        //时间控件
        $("#ShengchanRQ").datepicker();
        $("#ShixiaoRQ").datepicker();
    });
</script>
<div class="breadcrumbs" id="breadcrumbs">
    <script type="text/javascript">
        try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
    </script>
    <ul class="breadcrumb">
        <li>
            <i class="icon-home home-icon"></i>
            <a href="/Home">首页</a>
        </li>
        <li>
            <a href="/ord_fahuomx">发货明细</a>
        </li>
        <li class="active"> 新增</li>
    </ul>
</div>

<div class="page-content">
    <div class="wrapper" style="background: url('/Imgs/bg-cloud.png') repeat;">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2">
                    <div class="widget-box radius-4">
                        <div class="widget-header">
                            <h4><b>发货单明细</b></h4>
                        </div>
                        <div class="widget-body">
                            <div class="widget-main no-padding">
                                @using (Html.BeginForm("Save", "ord_fahuomx", FormMethod.Post, new { @role = "form", @class = "form-horizontal", @id = "form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" />
                                    <input type="hidden" id="MakeMan" name="MakeMan" value=@Session["user_id"] />
                                    <fieldset>
                                        @*发货序号*@
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" for="ChukuID"><b>发货序号</b></label>
                                            <div class="col-sm-8">
                                                <input type="text" name="ChukuID" id="ChukuID" class="form-control" placeholder="请填写发货序号" />
                                            </div>
                                        </div>
                                        @*商品代码*@
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" for="ShangpinDM"><b>商品代码</b></label>
                                            <div class="col-sm-8">
                                                <input type="text" name="ShangpinDM" id="ShangpinDM" class="form-control" placeholder="请填写商品代码" />
                                            </div>
                                        </div>
                                        @*商品名称*@
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" for="ShangpinMC"><b>商品名称</b></label>
                                            <div class="col-sm-8">
                                                <input type="text" name="ShangpinMC" id="ShangpinMC" class="form-control" placeholder="请填写商品名称" />
                                            </div>
                                        </div>
                                        @*注册证*@
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" for="Zhucezheng"><b>商品名称</b></label>
                                            <div class="col-sm-8">
                                                <input type="text" name="Zhucezheng" id="Zhucezheng" class="form-control" placeholder="请填写商品名称" />
                                            </div>
                                        </div>
                                        @*规格*@
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" for="Guige"><b>规格</b></label>
                                            <div class="col-sm-8">
                                                <input type="text" name="Guige" id="Guige" class="form-control" placeholder="请填写规格" />
                                            </div>
                                        </div>
                                        @*批号*@
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" for="Pihao"><b>批号</b></label>
                                            <div class="col-sm-8">
                                                <input type="text" name="Pihao" id="Pihao" class="form-control" placeholder="请填写批号" />
                                            </div>
                                        </div>
                                        @*序列码*@
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" for="Xuliehao"><b>序列码</b></label>
                                            <div class="col-sm-8">
                                                <input type="text" name="Xuliehao" id="Xuliehao" class="form-control" placeholder="请填写序列码" />
                                            </div>
                                        </div>
                                        @*生产日期*@
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" for="ShengchanRQ"><b>生产日期</b></label>
                                            <div class="col-sm-8">
                                                <div class="input-group">
                                                    <input id="ShengchanRQ" name="ShengchanRQ" class="form-control" value="@DateTime.Now.ToString("yyyy/MM/dd")" type="date">
                                                    <span class="input-group-addon">
                                                        <i class="icon-calendar bigger-110"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        @*失效日期*@
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" for="ShixiaoRQ"><b>失效日期</b></label>
                                            <div class="col-sm-8">
                                                <div class="input-group">
                                                    <input id="ShixiaoRQ" name="ShixiaoRQ" class="form-control" value="@DateTime.Now.ToString("yyyy/MM/dd")" type="date">
                                                    <span class="input-group-addon">
                                                        <i class="icon-calendar bigger-110"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        @*发货数量*@
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" for="ChukuSL"><b>发货数量</b></label>
                                            <div class="col-sm-8">
                                                <input type="text" name="ChukuSL" id="ChukuSL" class="form-control" placeholder="请填写发货数量" />
                                            </div>
                                        </div>
                                        @*单位*@
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" for="Danwei"><b>单位</b></label>
                                            <div class="col-sm-8">
                                                <input type="text" name="Danwei" id="Danwei" class="form-control" placeholder="请填写单位" />
                                            </div>
                                        </div>
                                        @*换算率*@
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" for="Huansuanlv"><b>换算率</b></label>
                                            <div class="col-sm-8">
                                                <input type="text" name="Huansuanlv" id="Huansuanlv" class="form-control" placeholder="请填写换算率" />
                                            </div>
                                        </div>
                                        @*套包号*@
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" for="Taobaohao"><b>套包号</b></label>
                                            <div class="col-sm-8">
                                                <input type="text" name="Taobaohao" id="Taobaohao" class="form-control" placeholder="请填写套包号" />
                                            </div>
                                        </div>
                                        @*备注*@
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" for="Beizhu"><b>备注</b></label>
                                            <div class="col-sm-8">
                                                <input type="text" name="Beizhu" id="Beizhu" class="form-control" placeholder="请填写备注" />
                                            </div>
                                        </div>
                                        <div class="form-group" style="display:none;">
                                            @Html.LabelFor(m => m.Col1, new { @class = "control-label col-sm-2" })
                                            <div class="col-sm-10">
                                                @Html.TextBoxFor(m => m.Col1, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        @*录入日期*@
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" for="MakeDate"><b>录入日期</b></label>
                                            <div class="col-sm-8">
                                                <div class="input-group">
                                                    <input name="MakeDate" id="MakeDate" readonly class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" type="text">
                                                    <span class="input-group-addon">
                                                        <i class="icon-calendar bigger-110"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        @*录入人*@
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" for="MakeMan"><b>录入人</b></label>
                                            <div class="col-sm-8">
                                                <div class="input-group">
                                                    <input placeholder="录入人" readonly class="form-control" type="text" value="@Html.GetDataValue_ID("userinfo", "全名", (int)ViewBag.userid)">
                                                    <span class="input-group-addon">
                                                        <i class="icon-user bigger-110"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </fieldset>
                                        <div class="form-actions center">
                                            <button id="save_bottom" class="btn btn-primary" type="button">
                                                <b>保存</b>
                                                <i class="icon-save bigger-110"></i>
                                            </button>
                                        </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
