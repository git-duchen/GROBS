@using GROBS.App_Code
@using GROBS.Models
@using X.PagedList
@using X.PagedList.Mvc
@{
    ViewBag.Title = "国润平台";
    string _searchcondition = ViewBag.SearchCondition;
    Layout = "~/Views/Shared/_LayoutCustomer02.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $('#carousel-Medical-instruments').carousel({
            interval: 4000,
        });
    });
</script>
@*轮播图*@
<div id="carousel-Medical-instruments" class="carousel slide" data-ride="carousel">
    <!-- 轮播（Carousel）指标 -->
    <ol class="carousel-indicators">
        <li data-target="#carousel-Medical-instruments" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-Medical-instruments" data-slide-to="1"></li>
        <li data-target="#carousel-Medical-instruments" data-slide-to="2"></li>
    </ol>

    <!-- 轮播（Carousel）项目 -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/Imgs/carousel/carousel-1.jpg" class="img-responsive" alt="欢迎来到嘉事国润：我们以客户中心|创新为驱动|质量为生命|人才为基础" width="100%">
            @*<div class="carousel-caption">
                    ...可选标题
                </div>*@
        </div>
        <div class="item">
            <img src="~/Imgs/carousel/carousel-2.jpg" class="img-responsive" alt="我们的使命：与客户精诚合作，致力于提高医疗保健水平" width="100%">
            @*<div class="carousel-caption">
                    ...可选标题
                </div>*@
        </div>
        <div class="item">
            <img src="~/Imgs/carousel/carousel-3.jpg" class="img-responsive" alt="坚持质量第一：我们致力于通过有效的质量体系，为客户提供符合法规要求的创新产品和服务" width="100%">
            @*<div class="carousel-caption">
                    ...可选标题
                </div>*@
        </div>
    </div>

    <!-- 轮播（Carousel）导航 -->
    <a class="left carousel-control" href="#carousel-Medical-instruments" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel-Medical-instruments" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
