@using GROBS.App_Code
@using GROBS.Models
@model auth_kehuViewModel
@{ViewBag.Title = "客户帐号添加";}

<script type="text/javascript">
    try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
    $(document).ready(function () {
        //submit
        $("#save_top").click(function () {
            $("#form").submit();
        });
        $("#save_bottom").click(function() {
            $("#form").submit();
        });
        //'是否停用'绑定值
        $("#TingyongSF").val("true");//默认赋值
        $("#TingyongSF").change(function () {
            if ($("#TingyongSF").is(":checked")) {
                $("#TingyongSF").val("true");//选中=true
            } else {
                $("#TingyongSF").val("false");//不选中=false
            }
        });
        $("#pl_jxs").draggable({ handle: ".panel-heading" });
        $("#pl_jxs_close").click(function () {
            $("#pl_jxs").hide();
        });
        $("#bt_jxs_add").click(function () {
            var selrow = false;
            $("#dt_jxs tr input[type=checkbox]").each(function () {
                if (this.checked) {
                    selrow = true;
                    $("#kehuid").val($(this).val());
                    $("#khname").val($(this).parent().parent().find("td").eq(2).html());
                }
            });
            if (selrow == false)
                alert("请选择客户后再确定！");
            else
                $("#pl_jxs").hide();
        });
        $("#btn_selkh").click(function () {
            $("#pl_jxs").show();
            $.ajax({
                async: true,
                beforeSend: function () {
                    ShowWait();
                },
                complete: function () {
                    HiddenWait();
                },
                type: "POST",
                url: "/base_shouhuodanwei/getcust",
                data: {
                     hz:1
                },
                success: function (data) {
                    var filltable = "";
                    if (data != -1) {
                        for (var i in data) {
                            filltable = filltable + '<tr><td><input type="checkbox" class ="checkbox" value="';
                            filltable = filltable + data[i].ID;
                            filltable = filltable + '"/></td><td>';
                            filltable = filltable + data[i].KehuDM;
                            filltable = filltable + '</td><td>';
                            filltable = filltable + data[i].Mingcheng;
                            filltable = filltable + '</td><td>';
                            filltable = filltable + data[i].Lianxiren;
                            filltable = filltable + '</td><td>';
                            filltable = filltable + data[i].SonghuoDZ;
                            filltable = filltable + '</td><tr>';
                        }
                    }
                    else {
                        alert("获取客户信息出错，请联系管理员！");
                    }
                    $("#dt_jxs tbody").html(filltable);
                }
            });

        });
    });
</script>
<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home home-icon"></i>
            <a href="/Home">首页</a>
        </li>
        <li>
            <a href="/auth_kehu">客户帐号</a>
        </li>
        <li class="active"> 新增</li>
    </ul>
</div>
<div id="loading"><img src="~/Imgs/wait.gif" alt="" />...系统正在加载数据,请耐心等待...</div>
<div class="page-content">
    <div class="page-header">
        <button type="button" class="btn btn-app btn-xs btn-primary radius-4" onclick="javascript:history.back(-1); "><i class="icon-reply icon-only"></i><b>返回</b></button>
        <button type="button" id="save_top" class="btn btn-app btn-xs btn-primary radius-4">
            <i class="icon-save"></i><b>保存</b>
            <span class="badge badge-transparent">
                <i class="light-red icon-asterisk"></i>
            </span>
        </button>
    </div>
    <div class="wrapper" style="background: url('/Imgs/bg-cloud.png') repeat;">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2">
                    <div class="widget-box radius-4">
                        <div class="widget-header">
                            <h4><b>客户账号信息</b></h4>
                        </div>
                        <div class="widget-body">
                            <div class="widget-main no-padding">
                                @using (Html.BeginForm("Save", "auth_kehu", FormMethod.Post, new { @role = "form", @class = "form-horizontal", @id = "form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" />
                                    <input type="hidden" name="kehuid" id="kehuid"/>
                                    <input type="hidden" id="MakeMan" name="MakeMan" value=@Session["user_id"] />
                                    <fieldset>
                                        @*客户*@
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"><i class="red glyphicon glyphicon-asterisk"></i> <b>客户</b></label>
                                            <div class="col-sm-8">
                                                <div class="input-group">
                                                    <input id="khname" placeholder="请选择商品" class="form-control" type="text">
                                                    <span class="input-group-btn">
                                                        <button type="button" id="btn_selkh" class="btn btn-primary btn-sm">
                                                            选择
                                                            <i class="icon-hand-up icon-on-right bigger-110"></i>
                                                        </button>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        @*账号*@
                                        <div class="form-group">
                                            <label for="Zhanghao" class="col-sm-3 control-label"><b>账号</b></label>
                                            <div class="col-sm-8">
                                                <input type="text" id="Zhanghao" name="Zhanghao" class="form-control" placeholder="请输入账号" />
                                            </div>
                                        </div>
                                        @*密码*@
                                        <div class="form-group">
                                            <label for="Mima" class="col-sm-3 control-label"><b>密码</b></label>
                                            <div class="col-sm-8">
                                                <input type="text" id="Mima" name="Mima" class="form-control" placeholder="请输入密码" />
                                            </div>
                                        </div>
                                        @*昵称*@
                                        <div class="form-group">
                                            <label for="Nicheng" class="col-sm-3 control-label"><b>昵称</b></label>
                                            <div class="col-sm-8">
                                                <input type="text" id="Nicheng" name="Nicheng" class="form-control" placeholder="请输入昵称" />
                                            </div>
                                        </div>
                                        @*是否停用*@
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" for="TingyongSF"><b>是否停用</b></label>
                                            <div class="col-sm-4">
                                                <label class="control-group">
                                                    <input name="TingyongSF" id="TingyongSF" class="ace ace-switch ace-switch-7" checked="checked" type="checkbox">
                                                    <span class="lbl"></span>
                                                </label>
                                            </div>
                                        </div>
                                        @*Col1*@
                                        @*<div class="form-group" style="display:none;">
                                            <label for="Col1" class="col-sm-3 control-label"><b>Col1</b></label>
                                            <div class="col-sm-8">
                                                <input type="text" id="Col1" name="Col1" class="form-control" placeholder="请输入Col1" />
                                            </div>
                                        </div>*@
                                        @*录入日期*@
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" for="MakeDate"><b>录入日期</b></label>
                                            <div class="col-sm-8">
                                                <div class="input-group">
                                                    <input name="MakeDate" id="MakeDate" disabled="disabled" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" type="text">
                                                    <span class="input-group-addon">
                                                        <i class="icon-calendar bigger-110"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        @*录入人*@
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" for="MakeMan"><b>录入人</b></label>
                                            <div class="col-sm-8">
                                                <div class="input-group">
                                                    <input placeholder="录入人" disabled="disabled" class="form-control" type="text" value="@Html.GetDataValue_ID("userinfo", "全名", (int)ViewBag.userid)">
                                                    <span class="input-group-addon">
                                                        <i class="icon-user bigger-110"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </fieldset>
                                    <div class="form-actions center">
                                        <button id="save_bottom" class="btn btn-primary" type="button">
                                            <b>保存</b>
                                            <i class="icon-save bigger-110"></i>
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="pl_jxs" class="panel panel-primary" hidden style="position:fixed;top:100px;left:240px;width:700px;height:auto;overflow:hidden;z-index:999;">
    <div class="panel-heading">
        <h3 class="panel-title">经销商<button id="pl_jxs_close" class="pull-right">X</button></h3>
    </div>
    <div class="panel-body">
        <div class="center" style="width:680px;height:500px;overflow:scroll;">
            <button type="button" class="btn btn-default " id="bt_jxs_add"><i class="icon-add"></i>确定</button>
            <table class="table table-bordered table-condensed" id="dt_jxs">
                <caption></caption>
                <thead>
                    <tr>
                        <td></td>
                        <td>编号</td>
                        <td>名称</td>
                        <td>联系人</td>
                        <td>地址</td>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>
